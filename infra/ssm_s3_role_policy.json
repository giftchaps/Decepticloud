{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowSSMRunCommand",
      "Effect": "Allow",
      "Action": [
        "ssm:SendCommand",
        "ssm:GetCommandInvocation",
        "ssm:ListCommandInvocations",
        "ssm:ListCommands"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowS3WriteResults",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:PutObjectAcl",
        "s3:ListBucket",
        "s3:GetBucketLocation"
      ],
      "Resource": [
        "arn:aws:s3:::REPLACE_WITH_YOUR_BUCKET",
        "arn:aws:s3:::REPLACE_WITH_YOUR_BUCKET/*"
      ]
    }
  ]
}
